<Window x:Class="mozi.Mozi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mozi"
        mc:Ignorable="d"
        Title="Mozi" Height="450" Width="800">
    <Grid Background="#FF423E3E">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="72,314,0,0" TextWrapping="Wrap" Text="A vietnámi háborús veterán, John Rambo (Sylvester Stallone) hazatér Amerikába, ahol idegennek és üldözöttnek érzi magát. Egy kisváros seriffje igazságtalanul bánik vele, ami elszabadítja Rambo túlélő ösztöneit. A film egy ember harcát mutatja be a rendszerrel és saját traumáival szemben.
                   " VerticalAlignment="Top" Width="630" Foreground="White" Height="98" FontSize="17"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Center" Margin="0,53,0,0" TextWrapping="Wrap" Text="RAMBO – ELSŐ VÉR (1982)" VerticalAlignment="Top" Foreground="White" Height="38" Width="326" FontSize="25"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="358,110,0,0" TextWrapping="Wrap" Text="Cím: First Blood (magyarul: Rambo – Első vér)" VerticalAlignment="Top" Height="32" Width="344" Foreground="White" FontSize="17"/>
        <TextBlock x:Name="textBlock2_Copy" HorizontalAlignment="Left" Margin="358,147,0,0" TextWrapping="Wrap" Text="Megjelenés éve: 1982" VerticalAlignment="Top" Height="32" Width="344" Foreground="White" FontSize="17"/>
        <TextBlock x:Name="textBlock2_Copy1" HorizontalAlignment="Left" Margin="358,185,0,0" TextWrapping="Wrap" Text="Korhatár-besorolás: 16" VerticalAlignment="Top" Height="32" Width="344" Foreground="White" FontSize="17"/>
        <TextBlock x:Name="textBlock2_Copy2" HorizontalAlignment="Left" Margin="358,222,0,0" TextWrapping="Wrap" Text="Időtartam: kb. 93 perc (1 óra 33 perc)" VerticalAlignment="Top" Height="32" Width="344" Foreground="White" FontSize="17"/>
        <TextBlock x:Name="textBlock2_Copy3" HorizontalAlignment="Left" Margin="358,259,0,0" TextWrapping="Wrap" Text="Műfaj: akció, dráma, thriller" VerticalAlignment="Top" Height="32" Width="344" Foreground="White" FontSize="17"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="190" Margin="109,110,0,0" VerticalAlignment="Top" Width="201" Source="/rambo.png"/>
        <Button x:Name="button" Content="Visszagomb" HorizontalAlignment="Left" Margin="686,29,0,0" VerticalAlignment="Top" Height="39" Width="68" Background="#FFE02D2D" Click="button_Click"/>

    </Grid>
</Window>
