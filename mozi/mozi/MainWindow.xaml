<Window x:Class="mozi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mozi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl x:Name="tabControl">

            <TabItem>
                <Grid Background="#FF423E3E" Margin="0,0,0,1"/>
                <TabItem.Header>
                    <Image Source="/retro.png" Width="50" Height="50"/>
                </TabItem.Header>
            </TabItem>
            <TabItem Header="Filmek" FontSize="20">
                <Grid Background="#FF423E3E">
                    <Image x:Name="image" HorizontalAlignment="Left" Height="171" Margin="8,22,0,0" VerticalAlignment="Top" Width="129" Source="/rambo.png" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0.013"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                    <Button x:Name="button" Content="Bővebben" HorizontalAlignment="Left" Margin="10,198,0,0" VerticalAlignment="Top" Width="116" Background="#FFE02D2D" Click="button_Click"/>
                    <Image x:Name="image1" HorizontalAlignment="Left" Height="168" Margin="178,24,0,0" VerticalAlignment="Top" Width="173" Source="/vuk.png"/>
                    <Button x:Name="button1" Content="Bővebben" HorizontalAlignment="Left" Margin="178,198,0,0" VerticalAlignment="Top" Width="116" Background="#FFE02D2D" Click="button_Click1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Jegyek" FontSize="20" HorizontalAlignment="Right" Margin="0,-2,-2,0" Width="76">
                <Grid Background="#FF423E3E"/>
            </TabItem>
            <TabItem Header="Büfé" FontSize="20">
                <Grid Background="#FF423E3E"/>
            </TabItem>
            <TabItem Header="Névjegy" FontSize="20">
                <Grid Background="#FF423E3E"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
